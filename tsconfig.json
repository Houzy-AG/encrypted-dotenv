{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2020",
        "outDir": "./lib",
        "baseUrl": "./src",
        "sourceMap": true,
        "incremental": true,
        "noImplicitAny": true,
        "strict": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "src/**/*.spec.ts"
    ]
}